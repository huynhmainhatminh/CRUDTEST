@using CRUDDATABASE.DAL
@model IEnumerable<QlUser>
@{
	ViewData["Title"] = "User List";
}

<div class ="container mt-5"
<h2>@ViewData["Title"]</h2>
<div class="col end-0">
	<a asp-action="Create" class="btn btn-primary">Add New User</a>
</div>
<div class="shadow p-3 mb-5 bg-white rounded">
	<table class="table table-striped table-hover table-responsive">
		<thead>
			<tr>
				<th>Id User</th>
				<th>Name User</th>
				<th>Username</th>
				<th>Password</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Facebook</th>
				<th>Access</th>
				<th class="align-items-center">Action</th>
			</tr>
		</thead>
		<tbody>
				@if(Model != null && Model.Any())
				{
					@foreach(var user in Model)
					{
						<tr>
							<td>
								@user.IdUser
							</td>
							<td>
								@user.NameUser
							</td>
							<td>
								@user.Username
							</td>
							<td>
								@user.PassUser
							</td>
							<td>
								@user.Phone
							</td>
							<td>
								@user.Email
							</td>
							<td>
								@user.Facebook
							</td>
							<td>
								@user.AccessUser
							</td>
							<td>
								<a asp-action="Edit" asp-route-id="@user.IdUser" class="btn btn-warning">Edit</a>
								<a asp-action="Delete" asp-route-id="@user.IdUser" class="btn btn-danger">Delete</a>
							</td>
						</tr>
					}
				}
				else
				{
					<tr>
						<td colspan="5">
							Không có dữ liệu người dùng
						</td>
					</tr>
				}
			</tbody>
	</table>
</div>
</div>